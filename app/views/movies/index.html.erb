<h1>All Movies</h1>

<div id="movies">
  <div class="row">
    <div class="col-8">
      <% if 'title' == @coluna_ordenada %>
        <%= link_to 'Movie Title', movies_path(sort: 'title'), class: 'sorted', data: { turbo: false } %>
      <% else %>
        <%= link_to 'Movie Title', movies_path(sort: 'title'), data: { turbo: false } %>
      <% end %>
    </div>

    <div class="col-2">Rating</div>

    <div class="col-2">
      <% if 'release_date' == @coluna_ordenada %>
        <%= link_to 'Release Date', movies_path(sort: 'release_date'), class: 'sorted', data: { turbo: false } %>
      <% else %>
        <%= link_to 'Release Date', movies_path(sort: 'release_date'), data: { turbo: false } %>
      <% end %>
    </div>
  </div>

  <% @movies.each do |movie| %>
    <div class="row">
      <div class="col-8">
        <%= link_to movie.title, movie_path(movie) %>
      </div>
      <div class="col-2"><%= movie.rating %></div>
      <div class="col-2"><%= link_to movie.release_date.strftime('%F'), movie_path(movie) %></div>
    </div>
  <% end %>
</div>